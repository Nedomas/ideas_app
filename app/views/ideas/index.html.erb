<h1>Ideas!</h1>
<ol>
	<% @ideas.each do |idea| %>
		<li>
			<%= idea.title %>
			<% if idea.done %>
				X
        <%= link_to "remove", idea_path(idea), method: :delete %>
			<% else %>
				<%= link_to "O", edit_idea_path(idea) %>
			<% end %>
		</li>
	<% end %>
</ol>

<%= form_for :idea do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %> 
  <%= form.submit %>
<% end %>